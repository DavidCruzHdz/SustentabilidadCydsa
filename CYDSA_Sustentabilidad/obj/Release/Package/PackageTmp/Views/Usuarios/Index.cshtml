    @Html.ActionLink("Agregar Nuevo", "Create")
</h4>

<div class="container form-group col-md-12">
 
    <div class="form-horizontal container-fluid col-lg-push-12 img-rounded " style="background-color:#D6EAF8">
        <br />
        <table class="table display" style="background-color:#D6EAF8" id="example">
         

            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdsNombreUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdsCorreo)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdsNombreUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdsCorreo)
                        </td>
                        <td>
                            @Html.ActionLink("Plantas", "Permisos", new { id = item.IdsIdUsuario }) |
                            @Html.ActionLink("Pantallas", "Pantallas", new { id = item.IdsIdUsuario }) |
                            @Html.ActionLink("Modificar", "Edit", new { id = item.IdsIdUsuario }) |
                            @Html.ActionLink("Borrar", "Delete", new { id = item.IdsIdUsuario })
                        </td>
                    </tr>
                }

            </tbody>

        </table>
        <br />
    </div>
